{% extends 'base.html.twig' %}

{% block title %}GERER LES USERS
{% endblock %}

{% block body %}
	<div class="content">
		<div class="container-fluid">
			<div class="row">
				<div class="col-md-12">
					<div class="card strpied-tabled-with-hover">
						<div class="card-header ">
							<h4 class="card-title">LISTE DES UTILISATEURS
							</h4>

						</div>
						<div class="card-body table-full-width table-responsive">
							<table class="table table-hover table-striped">
								<a href="{{path("app_register")}}" class="btn shadow-1 rounded-1 blue">
									Ajouter un User</a>
								{% if users %}

									<thead>
										<tr>
											<th>ID</th>
											<th>Nom</th>
											<th>Prenom</th>
											<th>Email</th>
											<th>Service</th>
											<th>Actions</th>
										</tr>
									</thead>
									<tbody>

										{% for users in users %}
											<tr>
												<td>
													{{users.id}}
												</td>
												<td>{{users.nom}}
												</td>
												<td>
													{{users.prenom}}
												</td>
												<td>{{users.email}}
												</td>
												<td>{{users.service}}
												</td>
												<td>
													<a href="{{path("app_register")}}" class="btn shadow-1 rounded-1 blue">
														modifier</a>
													<a href="{{path("app_register")}}" class="btn shadow-1 rounded-1 blue">
														supprimer</a>
												</td>
											</tr>

										{% endfor %}
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
				{% else %}
			{% endif %}
		</div>
	</div>
{% endblock %}
